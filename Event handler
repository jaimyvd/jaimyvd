class Program
{
    public static void Main()
    {
        Business c = new Business();
        c.FinishProcess += c_FinishProcess;
        c.StartProcess();
    }

   
    public static void c_FinishProcess(object sender, EventArgs e)
    {
        Console.WriteLine("Process Finished!");
    }
}

public class Business
{
    
    public event EventHandler ProcessFinished; 

    public void StartProcess()
    {
        Console.WriteLine("Process Started!");
       
        OnProcessFinished(EventArgs.Empty); 
    }

    protected virtual void OnProcessFinished(EventArgs e)
    {
        ProcessFinished?.Invoke(this, e);
    }
}
